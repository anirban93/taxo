<Window x:Class="RestaurentMngment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Home">
    <Grid>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="504" Stroke="Green" VerticalAlignment="Top" Width="160"/>

        <Button Content="Order" Name="OrderSelect" HorizontalAlignment="Left" Margin="10,68,0,0" VerticalAlignment="Top" Width="145" Height="29" Click="OrderSelect_Click"/>
        <Button Content="Menu" Name="MenuSelect" HorizontalAlignment="Left" Margin="10,102,0,0" VerticalAlignment="Top" Width="145" Height="29" Click="MenuSelect_Click"/>
        <Button Content="Sell" Name="SellSelect" HorizontalAlignment="Left" Margin="10,136,0,0" VerticalAlignment="Top" Width="145" Height="29" Click="SellSelect_Click"/>
        <Button Content="Button" Name="Button" HorizontalAlignment="Left" Margin="10,170,0,0" VerticalAlignment="Top" Width="145" Height="29" Click="Button_Click"/>
        <Rectangle Fill="Black" Name="ContentBody" HorizontalAlignment="Left" Height="504" Margin="160,0,0,0" Stroke="Green" VerticalAlignment="Top" Width="600"/>
        <Border BorderBrush="Black" BorderThickness="10" HorizontalAlignment="Left" Height="504" Margin="160,0,0,0" VerticalAlignment="Top" Width="600">
            <TextBox Background="BurlyWood" Name="BodyText" TextWrapping="Wrap" Text="text" FontSize="50"/>
        </Border>

    </Grid>
</Window>
